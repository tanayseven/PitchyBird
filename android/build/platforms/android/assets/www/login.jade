doctype html
head
  title= "Pitchy Bird (Login)"
  link(rel="stylesheet",href="game.css")
  link(rel='shortcut icon', type='image/x-icon', href='favicon.ico')
body.retro.login
  div.login
    h1
      span.retro.login Pitchy Bird
    form(action='/play', method='POST')
      br
      p.retro.login Username: 
      p
        input.retro.login(name='username', type='text', autofocus)
      br
      p.retro.login Prove that you are not a bot:
      div#captcha
        div(class='g-recaptcha', data-sitekey='6LeZEAoTAAAAAI-nIEB1T9FvyPytKtsmXa5W8eXX', data-theme='dark')
      br
      input.retro.login(type='submit', value='Play the game!')
      p.retro.login #{msg}
    div.retro_footer 
      p.retro_footer
      | Created by Tanay PrabhuDesai © 2015 MIT License, Fonts by codeman38 ©  2001-2 
      a(href='http://www.zone38.net/') codeman38
    script(src='https://www.google.com/recaptcha/api.js')